<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReminderLogic.ReminderViewer">

    <TextView
        android:id="@+id/place"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="261dp"
        android:text="Place: "
        app:layout_constraintBottom_toTopOf="@+id/descrip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leave" />

    <TextView
        android:id="@+id/descrip"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="261dp"
        android:layout_marginBottom="60dp"
        android:text="Description: "
        app:layout_constraintBottom_toTopOf="@+id/backToReminders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place" />

    <TextView
        android:id="@+id/dateStuff"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="261dp"
        android:layout_marginBottom="16dp"
        android:text="Date:  "
        app:layout_constraintBottom_toTopOf="@+id/place"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leave" />

    <TextView
        android:id="@+id/leave"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="261dp"
        android:text="Leave Time: "
        app:layout_constraintBottom_toTopOf="@+id/dateStuff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/target" />

    <TextView
        android:id="@+id/target"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="261dp"
        android:layout_marginBottom="10dp"
        android:text="Target Time: "
        app:layout_constraintBottom_toTopOf="@+id/leave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remindTItleReal" />

    <ImageView
        android:id="@+id/storePic"
        android:layout_width="410dp"
        android:layout_height="302dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/remindTItleReal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/remindTItleReal"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="261dp"
        android:layout_marginBottom="5dp"
        android:text="Title: "
        app:layout_constraintBottom_toTopOf="@+id/target"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storePic" />

    <Button
        android:id="@+id/backToReminders"
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="80dp"
        android:text="Back To Reminders"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storePic"
        app:layout_constraintVertical_bias="0.969" />
</androidx.constraintlayout.widget.ConstraintLayout>